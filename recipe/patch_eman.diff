+        RUNNING_SHELL=$(readlink /proc/$$/exe)
+    fi
+    if [ -z "$RUNNING_SHELL" ] || [ ! -f "$RUNNING_SHELL" ]; then
+        RUNNING_SHELL=$(ps -p $$ -o args= | sed 's|^-||')
+        case "$RUNNING_SHELL" in
+            */*)
+                ;;
+            default)
+                RUNNING_SHELL=$(which "$RUNNING_SHELL")
+                ;;
