@@ -113,10 +111,6 @@ if which getopt > /dev/null 2>&1; then
                 FORCE=1
                 shift
                 ;;
-            -t)
-                TEST=1
-                shift
-                ;;
             --)
                 shift
                 break
@@ -128,7 +122,7 @@ if which getopt > /dev/null 2>&1; then
         esac
     done
 else
-    while getopts "bfhp:sut" x; do
